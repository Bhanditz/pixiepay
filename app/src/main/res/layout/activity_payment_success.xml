<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:id="@+id/rl_loan_application"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/grey_50"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_gravity="center"
                    android:layout_height="130dp"
                    android:layout_width="130dp"
                    android:layout_marginTop="@dimen/value_20dp"
                    android:layout_marginBottom="@dimen/value_20dp"
                    android:background="@drawable/congratulations"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Small"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_20dp"
                    android:layout_marginRight="@dimen/value_20dp"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/value_15dp"
                    android:paddingLeft="@dimen/value_15dp"
                    android:paddingRight="@dimen/value_15dp"
                    android:text="@string/success_txt"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_payment_success"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/value_20dp"
                    android:layout_marginLeft="@dimen/value_20dp"
                    android:layout_marginRight="@dimen/value_20dp"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/value_15dp"
                    android:paddingLeft="@dimen/value_15dp"
                    android:paddingRight="@dimen/value_15dp"
                    android:textSize="@dimen/value_16sp"
                    android:textColor="@android:color/black"/>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>